{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "VHub.UserActivities.Application.Consumers.MovieCreatedConsumer": "Debug",
      "KafkaFlow": "Debug", // Включаем логи KafkaFlow
      "KafkaFlow.Consumer": "Debug",
      "KafkaFlow.Producer": "Debug",
      "Confluent.Kafka": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "KafkaFlow": "Debug",
        "VHub.UserActivities": "Debug"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "vhub-ua-service-db-connection": "User ID=postgres;Password=123;Host=localhost;Port=5432;Database=vhub-ua-db;"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9094",
    "GroupId": "user-activities-group"
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "vhub-ua.log",
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "7"
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
